# Deployment Environment
ENVIRONMENT=local

# Service Endpoints (internal Docker network names for local, actual hosts for remote)
MIMIR_HOST=mimir
LOKI_HOST=loki
TEMPO_HOST=tempo
GRAFANA_HOST=grafana

# External Ports (for accessing services from outside Docker)
GRAFANA_PORT=3030
ALLOY_OTLP_GRPC_PORT=4317
ALLOY_UI_PORT=12345
MIMIR_PORT=9009
LOKI_PORT=3100
TEMPO_PORT=3200

# Internal Service Ports (usually don't change)
MIMIR_INTERNAL_PORT=9009
LOKI_INTERNAL_PORT=3100
TEMPO_INTERNAL_PORT=4317
GRAFANA_INTERNAL_PORT=3000

# Database Configuration
DB_DSN=postgresql://postgres:postgres@host.docker.internal:5432/yourdb?sslmode=disable

# Retention Settings
LOKI_RETENTION_DAYS=7
TEMPO_RETENTION_DAYS=7

# TLS Settings (set to false for local, true for production with proper certs)
TLS_ENABLED=false

# Authentication (empty for local, set for production)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin